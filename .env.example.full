# ============================================================
# SkillLite 完整环境变量参考
# 高级用户按需配置，详见 docs/zh/ENV_REFERENCE.md
# ============================================================

# ==================== LLM API ====================
BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
API_KEY=your-api-key-here
MODEL=qwen3-max

# ==================== Skills & Output ====================
SKILLS_DIR=./.skills
# SKILLLITE_OUTPUT_DIR=./output
# SKILLBOX_SKILLS_ROOT=./.skills

# ==================== Network ====================
ALLOW_NETWORK=True
NETWORK_TIMEOUT=30

# ==================== Sandbox & Security ====================
ENABLE_SANDBOX=true
SKILLBOX_SANDBOX_LEVEL=3
# SKILLBOX_SANDBOX_LEVEL: 1=无沙箱 2=沙箱宽松 3=扫描+确认(默认)
# SKILLBOX_ALLOW_PLAYWRIGHT=1
# SANDBOX_BUILTIN_TOOLS=1
# SKILLBOX_AUTO_APPROVE=1

# ==================== Resource ====================
EXECUTION_TIMEOUT=120
MAX_MEMORY_MB=256

# ==================== Long Text / Summarization ====================
# SKILLLITE_CHUNK_SIZE=6000
# SKILLLITE_HEAD_CHUNKS=3
# SKILLLITE_TAIL_CHUNKS=3
# SKILLLITE_MAX_OUTPUT_CHARS=8000
# SKILLLITE_SUMMARIZE_THRESHOLD=15000
# SKILLLITE_TOOL_RESULT_MAX_CHARS=8000

# ==================== Planning ====================
# SKILLLITE_PLANNING_RULES_PATH=./my_planning_rules.json

# ==================== Observability & Audit ====================
# SKILLLITE_AUDIT_LOG=~/.skilllite/audit/audit.jsonl
# SKILLLITE_SECURITY_EVENTS_LOG=~/.skilllite/audit/security.jsonl
# SKILLBOX_LOG_LEVEL=info
# SKILLBOX_LOG_JSON=0

# ==================== Debug & Advanced ====================
# SKILLBOX_DEBUG=1
# SKILLBOX_USE_IPC=1
# SKILLBOX_PATH=/path/to/skillbox
# SKILLLITE_CACHE_DIR=~/.cache/skilllite/envs   # 技能环境缓存（Python venv / Node）
# MCP_SANDBOX_TIMEOUT=30
