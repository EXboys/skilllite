# ============================================================
# SkillLite 完整环境变量参考（按层级：必需→常用→高级→内部）
# 详见 docs/zh/ENV_REFERENCE.md
# ============================================================

# [必需] LLM API
BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
API_KEY=your-api-key-here
MODEL=qwen3-max

# [常用] Skills & Output
SKILLS_DIR=./.skills
# SKILLLITE_SKILLS_REPO=EXboys/skilllite
# SKILLLITE_OUTPUT_DIR=./output

# [常用] Network
ALLOW_NETWORK=True
NETWORK_TIMEOUT=30

# [常用] Sandbox & Security
ENABLE_SANDBOX=true
SKILLBOX_SANDBOX_LEVEL=3
# 1=无沙箱 2=宽松 3=扫描+确认(默认)

# [常用] Resource
EXECUTION_TIMEOUT=120
MAX_MEMORY_MB=256

# [高级] Long Text / Summarization
# SKILLLITE_MAX_TOKENS=8192
# SKILLLITE_CHUNK_SIZE=6000
# SKILLLITE_HEAD_CHUNKS=3
# SKILLLITE_TAIL_CHUNKS=3
# SKILLLITE_MAX_OUTPUT_CHARS=8000
# SKILLLITE_SUMMARIZE_THRESHOLD=15000
# SKILLLITE_TOOL_RESULT_MAX_CHARS=8000

# [高级] Planning
# SKILLLITE_COMPACT_PLANNING=1

# [高级] Observability & Audit
# SKILLLITE_AUDIT_LOG=~/.skilllite/audit/audit.jsonl
# SKILLLITE_SECURITY_EVENTS_LOG=~/.skilllite/audit/security.jsonl
# SKILLLITE_LOG_LEVEL=info
# SKILLLITE_LOG_JSON=0

# [高级/内部] Debug & Advanced
# SKILLBOX_DEBUG=1
# SKILLBOX_USE_IPC=1
# SKILLLITE_PATH=/path/to/skilllite
# SKILLLITE_CACHE_DIR=~/.cache/skilllite/envs
# MCP_SANDBOX_TIMEOUT=30
