# ============================================================
# SkillLite 快速开始
# 复制此文件为 .env 并填入你的配置即可运行
# 完整变量说明见 docs/ENV_REFERENCE.md
# ============================================================


BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
API_KEY=your-api-key-here
MODEL=qwen3-max


# ==================== Sandbox & Security ====================
ENABLE_SANDBOX=true
SKILLBOX_SANDBOX_LEVEL=3
# SKILLBOX_SANDBOX_LEVEL: 1=无沙箱 2=沙箱宽松 3=扫描+确认(默认)
# SKILLBOX_ALLOW_PLAYWRIGHT=1
# SANDBOX_BUILTIN_TOOLS=1
# SKILLBOX_AUTO_APPROVE=1

# ==================== Skills & Execution ====================
SKILLS_DIR=./.skills
ALLOW_NETWORK=True
EXECUTION_TIMEOUT=120
