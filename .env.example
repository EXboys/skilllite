# ==================== LLM API Configuration ====================
BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
API_KEY=your-api-key-here
MODEL=qwen3-max

# Skills Configuration
SKILLS_DIR=./.skills

# Network Configuration (Optional)
ALLOW_NETWORK=True
NETWORK_TIMEOUT=30

# Sandbox Configuration
ENABLE_SANDBOX=true
SKILLBOX_SANDBOX_LEVEL=3

# Whether to automatically approve security warnings
# SKILLBOX_AUTO_APPROVE=1 Automatically approve all security warnings without manual confirmation
SKILLBOX_AUTO_APPROVE=0

# ==================== Resource Limitation Configuration ====================
# 默认 120 秒。xiaohongshu-writer 首次运行可能安装 Pillow 等依赖，建议设为 300 或先运行 skilllite init
EXECUTION_TIMEOUT=120
MAX_MEMORY_MB=256

POST_CONFIRMATION_SANDBOX_LEVEL=2


