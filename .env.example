# ==================== LLM API Configuration ====================
BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
API_KEY=your-api-key-here
MODEL=qwen3-max

# Skills Configuration
SKILLS_DIR=./.skills

# Network Configuration (Optional)
ALLOW_NETWORK=True
NETWORK_TIMEOUT=30

# ==================== Sandbox & Security ====================
# Level 1: No sandbox (full trust)
# Level 2: Sandbox + allow .env/git/venv/cache
# Level 3: Scan + confirm, after confirm = Level 2
#
# If unusable, set Level 1. If a skill hangs in L2: SKILLBOX_DEBUG=1 prints progress
# or temporarily set SKILLBOX_SANDBOX_LEVEL=1 to bypass sandbox
# Optional: SANDBOX_BUILTIN_TOOLS=1 for builtin file tools subprocess

ENABLE_SANDBOX=true
SKILLBOX_SANDBOX_LEVEL=3

# ==================== Resource Limitation ====================
# When skills need deps (e.g. xiaohongshu-writer), suggest EXECUTION_TIMEOUT=300
EXECUTION_TIMEOUT=120
MAX_MEMORY_MB=256


