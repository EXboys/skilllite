# ==================== LLM API Configuration ====================
BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
API_KEY=your-api-key-here
MODEL=qwen3-max

# Skills Configuration
SKILLS_DIR=./.skills

# Output directory for final results (reports, images). Default: {workspace_root}/output
# Relative path: vs workspace root. Absolute path: as-is.
# SKILLLITE_OUTPUT_DIR=./output
# SKILLLITE_OUTPUT_DIR=/tmp/skilllite-results

# Network Configuration (Optional)
ALLOW_NETWORK=True
NETWORK_TIMEOUT=30

# ==================== Sandbox & Security ====================
# SKILLBOX_SANDBOX_LEVEL:
#   1 = No sandbox (full trust)
#   2 = Sandbox + allow .env/git/venv/cache/Playwright (relaxed)
#   3 = Scan + confirm, after confirm = Level 2 (default)
#
# SKILLBOX_ALLOW_PLAYWRIGHT=1  Skip sandbox only for skills using Playwright (per-skill, safer)
#
# If unusable, set Level 1. If a skill hangs in L2: SKILLBOX_DEBUG=1 prints progress.
ENABLE_SANDBOX=true
SKILLBOX_SANDBOX_LEVEL=3

# Optional security settings (uncomment to enable):
# SANDBOX_BUILTIN_TOOLS=1   Run read_file/write_file in subprocess for isolation
# SKILLBOX_AUTO_APPROVE=1   Auto-approve L3 security prompts (not recommended)

# ==================== Resource Limitation ====================
# When skills need deps (e.g. xiaohongshu-writer), suggest EXECUTION_TIMEOUT=300
EXECUTION_TIMEOUT=120
MAX_MEMORY_MB=256


